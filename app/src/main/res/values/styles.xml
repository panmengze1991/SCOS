<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/default_theme_color</item>
        <item name="colorPrimaryDark">@color/default_theme_color_dark</item>
        <item name="colorAccent">@color/default_theme_color</item>
    </style>

    <!-- 通用按钮 -->
    <style name="ThemeButton">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/theme_button_bg_blue_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_large_16</item>
    </style>

    <!-- 导航栏按钮 -->
    <style name="GuideButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 通用输入框 -->
    <style name="ThemeEditText">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/theme_edit_text_selector</item>
        <item name="android:textSize">@dimen/text_large_16</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 通用table按钮 -->
    <style name="TableButton">
        <item name="android:background">@drawable/tab_bg_selector</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">14dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ListItem标题 -->
    <style name="ItemTitle">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large_16</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- ListItem内容 -->
    <style name="ItemContent">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_middle_14</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- 分隔线 -->
    <style name="Divider">
        <item name="android:background">@color/default_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <!-- 底部button -->
    <style name="BottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/btn_bg_blue_selector</item>

    </style>

</resources>
